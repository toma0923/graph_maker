#:kivy 2.3.0

<MainWidget>:
    BoxLayout: 
        orientation: 'horizontal'
        padding: [60, 60]
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Label:
                text: "グラフの名前"
                size_hint_y: 0.2
            Label:
                text: "x軸"
                size_hint_y: 0.4
            Label:
                text:"y軸"
                size_hint_y: 0.4

        BoxLayout:
            orientation: 'vertical'
            spacing: 30
            size_hint_x: 0.5
            TextInput:
                id: graph_name
                multiline: False
                size_hint_y: 0.2
                hint_text: "グラフの名前"
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.4
                TextInput:
                    id: x_name
                    multiline: False
                    size_hint_y: 0.3
                    hint_text: "x軸の名前"
                TextInput:
                    id: x_value
                    size_hint_y: 0.7
                    hint_text: "x軸の値(例. 1,2,3,4,5,...)"
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.4
                TextInput:
                    id: y_name
                    multiline: False
                    size_hint_y: 0.3
                    hint_text: "y軸の名前"
                TextInput:
                    id: y_value
                    size_hint_y: 0.7
                    hint_text: "y軸の値(例.10,25,40,55,...)"
                
        Button:
            text: '作図する'
            on_release: root.manager.current = 'graph_view'
            size_hint_x: 0.3
            font_size: 25

